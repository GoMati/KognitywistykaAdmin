<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pl.edu.uj.kognitywistyka.admin.gallery.model.Gallery" table="k_gallery">
		<id name="galleryId" column="id" type="long">
			<generator class="native"/>
		</id>
		<property name="title" type="java.lang.String">
			<column name="title" not-null="true" length="80"/>
		</property>
		<property name="date" type="timestamp">
			<column name="date" not-null="true" length="19"/>
		</property>
		<set name="photos" table="k_photo" fetch="select" inverse="true">
			<key>
				<column name="galleryId" not-null="true"></column>
			</key>
			<one-to-many class="pl.edu.uj.kognitywistyka.admin.gallery.model.Photo"/>
		</set>
   </class>
</hibernate-mapping>