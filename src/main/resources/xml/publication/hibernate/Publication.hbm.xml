<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="pl.edu.uj.kognitywistyka.admin.publication.model.Publication"
		table="k_publication">
		<id name="publicationId" column="id" type="long">
			<generator class="native" />
		</id>
		<property name="title" type="java.lang.String">
			<column name="title" not-null="true" length="80" />
		</property>
		<property name="date" type="timestamp">
			<column name="date" not-null="true" length="19" />
		</property>
		<property name="description" type="java.lang.String">
			<column name="description" not-null="false" />
		</property>
		<property name="fileName" type="java.lang.String">
			<column name="fileName" not-null="true" length="90" />
		</property>
		<property name="author" type="java.lang.String">
			<column name="author" not-null="true" length="80" />
		</property>
		<set name="tags" table="publication_tag" inverse="false" lazy="true"
			fetch="select" cascade="all">
			<key>
				<column name="id" not-null="true" />
			</key>
			<many-to-many entity-name="pl.edu.uj.kognitywistyka.admin.publication.model.Tag">
				<column name="TAG_ID" not-null="true" />
			</many-to-many>
		</set>

	</class>
</hibernate-mapping>